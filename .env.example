# Environment Configuration
# Copy this file to .env and update the values

# Security
SECRET_KEY=your-super-secret-key-here-change-me-in-production
DEBUG=True

# Database (SQLite is default, change for production)
# DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# OAuth2 Settings
OAUTH2_ACCESS_TOKEN_EXPIRE_SECONDS=3600
OAUTH2_REFRESH_TOKEN_EXPIRE_SECONDS=86400

# Email Settings (for user registration, password reset, etc.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# CORS Settings (for frontend applications)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production Settings
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Logging
# LOG_LEVEL=INFO